<% include ./partials/header.ejs %>
<% include ./partials/navbar.ejs %>
<div class='d-flex flex-column body'>



  <div class='jumbotron'></div>
  <div class='d-flex flex-row albums-reviews'>
   <div class='flex-column  albums'>
     <h2>Albums</h2>
     <ul class='album-list'>
       <div class='album-name'>
          <% albums.forEach((albums) => { %>
         <h5><a href=/reviews/<%= reviews.id %>><%= albums.title %></a></h5>
         <p><i><%= albums.artist %></i></p>
         <br>
           <% }); %>
       </div>
     </ul>
  </div>
  <div class='d-flex flex-column albums'>
    <h2>Recent Reviews</h2>
    <% reviews.forEach((reviews) => { %>

    <div class= 'd-flex flex-column review'>
      <div class='d-flex flex-row justify-content-between album-date'>
        <div class='review-album-name'>
          <h5><a href='#'><%= reviews.title %></a></h5>
        </div>
        <div class='review-album-date'><i><%= reviews.logged %></i></div>
      </div>
      <br>
      <div class='review-text'>
        <%= reviews.review %>
      </div>
      <div class='d-flex justify-content-end review-by'><i>by : <%= reviews.username %></i></div>
      <br>
       <% }); %>
    </div>
  </div>

<% include ./partials/footer.ejs %>
